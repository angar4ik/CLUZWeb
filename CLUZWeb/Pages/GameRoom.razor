@page "/gameroom/{Guid:guid}"
@using Models
@using CLUZWeb.Services
@inject NavigationManager NavigationManager
@inject GamePoolService _gamePool

<h3>GameRoom</h3>

@if (players.Count() == 0)
{
    <p><em>Nothing to display...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>State</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var player in players)
            {
                <tr>
                    <td>@player.Name</td>
                    <td>@player.State</td>
                    @*<td>
                        <button class="btn btn-primary" @onclick="j => Join(game)">
                            Join
                        </button>
                    </td>*@
                </tr>
            }
        </tbody>
    </table>
}
