@page "/gameroom/{Guid:guid}"

<h3>Game: @g.Name</h3>

<table class="table">
    <tbody>
        <tr>Status: @g.Status</tr>
        <tr>TimeDay: @g.TimeOfDay</tr>
        <tr>TimeFrame: @g.TimeFrame</tr>
        <tr>Players: @g.Players.Count</tr>
    </tbody>
</table>

@if (players.Count() == 0)
{
    <p><em>Nothing to display...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>State</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var player in players)
            {
                <tr>
                    <td>@player.Name</td>
                    <td>@player.State</td>
                </tr>
            }
        </tbody>
    </table>
    @if (g.AdminGuid == Guid.Parse(UserManager.GetUserId(AuthenticationStateProvider.GetAuthenticationStateAsync().Result.User)))
    {
        <div class="alert @StatusClass">@StatusMessage</div>
        <button class="btn btn-primary" @onclick="s => Start()">
            Start
        </button>
    }

    <button class="btn btn-primary float-right" @onclick="s => Leave()">
        Leave
    </button>
}
